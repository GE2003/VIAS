<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
            android:layout_marginTop="40dp"
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.skydoves.elasticviews.ElasticCardView
                android:id="@+id/cw_favorite_bt"
                android:layout_centerInParent="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp"
                app:cardBackgroundColor="@color/cyan"
                app:cardView_duration="250"
                android:layout_width="300dp"
                android:layout_height="200dp">
            <ImageView
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="60dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_favorite"/>
        </com.skydoves.elasticviews.ElasticCardView>

    </RelativeLayout>
    <RelativeLayout
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.skydoves.elasticviews.ElasticCardView
                android:id="@+id/cw_readhistory_bt"
               android:layout_alignParentLeft="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp"
                app:cardView_duration="250"
                app:cardBackgroundColor="@color/darkblue"
                android:layout_width="150dp"
                android:layout_height="200dp">
            <ImageView
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="60dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_history"/>
        </com.skydoves.elasticviews.ElasticCardView>
        <com.skydoves.elasticviews.ElasticCardView
                android:id="@+id/cw_setting_bt"

                app:cardCornerRadius="10dp"
                app:cardElevation="20dp"
                app:cardBackgroundColor="@color/darkcyan"
            android:layout_alignParentRight="true"
                app:cardView_duration="250"
                android:layout_width="150dp"
                android:layout_height="200dp">
            <ImageView
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="60dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_settings"/>

        </com.skydoves.elasticviews.ElasticCardView>
    </RelativeLayout>

</LinearLayout>