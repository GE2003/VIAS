<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200dp"
            app:lottie_rawRes="@raw/listening"
            android:visibility="gone"
            android:id="@+id/listening"
            app:lottie_loop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="200dp"
            android:layout_height="wrap_content">

    </com.airbnb.lottie.LottieAnimationView>

   <LinearLayout android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="vertical">
       <FrameLayout
               android:id="@+id/main_page_container"
               android:layout_width="match_parent"
               android:layout_height="0dp"
              android:layout_weight="1">
       </FrameLayout>

      <LinearLayout
              android:layout_marginBottom="10dp"

              android:layout_gravity="bottom"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                    android:orientation="horizontal">
    <com.skydoves.elasticviews.ElasticCardView
            android:id="@+id/photo_bt"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_photo_camera"
                android:layout_width="wrap_content"
                   android:layout_height="wrap_content"></ImageView>
    </com.skydoves.elasticviews.ElasticCardView>

    <com.skydoves.elasticviews.ElasticCardView
            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardView_duration="200"
            android:id="@+id/speak_bt"
            android:layout_height="match_parent">
    <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_mic_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    </ImageView>
    </com.skydoves.elasticviews.ElasticCardView>
          <com.skydoves.elasticviews.ElasticCardView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  app:cardView_duration="200"
                  android:id="@+id/stop_bt"
android:visibility="gone"
                  android:layout_height="match_parent">
              <ImageView
                      android:layout_gravity="center"
                      android:src="@drawable/ic_mic"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
              </ImageView>
          </com.skydoves.elasticviews.ElasticCardView>
          <com.skydoves.elasticviews.ElasticCardView
                  android:id="@+id/personal_bt"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content">
              <ImageView
                      android:layout_gravity="center"
                      android:src="@drawable/ic_person"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"></ImageView>
          </com.skydoves.elasticviews.ElasticCardView>
      </LinearLayout>
   </LinearLayout>
</RelativeLayout>