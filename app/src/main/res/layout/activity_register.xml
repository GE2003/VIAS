<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_height="match_parent">
    <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            app:lottie_rawRes="@raw/bg_night"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:fitsSystemWindows="true"
            android:layout_height="match_parent">

    </com.airbnb.lottie.LottieAnimationView>
    <ImageView
            android:layout_marginTop="70dp"
            android:layout_width="150dp"
            android:src="@drawable/logo"
           android:layout_centerHorizontal="true"
            android:layout_height="150dp">

    </ImageView>
<LinearLayout
        android:layout_marginTop="200dp"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_marginTop="20dp"
            android:id="@+id/number_input"
            android:hint="手机号"
            android:layout_gravity="center"
            app:met_baseColor="@color/white"
            android:layout_width="300dp"
            app:met_floatingLabel="highlight"
            app:met_underlineColor="@color/ghostwhite"
            app:met_floatingLabelText="手机号"
            app:met_floatingLabelTextSize="12sp"
            app:met_floatingLabelTextColor="@color/ghostwhite"
            app:met_iconLeft="@drawable/ic_local_number"
            android:layout_height="wrap_content">

    </com.rengwuxian.materialedittext.MaterialEditText>
    <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_marginTop="20dp"
            android:id="@+id/username_input"
            android:hint="昵称"
            android:layout_gravity="center"
            app:met_baseColor="@color/white"
            android:layout_width="300dp"
            app:met_floatingLabel="highlight"
            app:met_underlineColor="@color/ghostwhite"
            app:met_floatingLabelText="昵称"
            app:met_floatingLabelTextSize="12sp"
            app:met_floatingLabelTextColor="@color/ghostwhite"
            app:met_iconLeft="@drawable/ic_name"
            android:layout_height="wrap_content">

    </com.rengwuxian.materialedittext.MaterialEditText>
    <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/gender_input"
            app:met_floatingLabelTextColor="@color/ghostwhite"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:met_baseColor="@color/white"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="密码"
            android:hint="密码"
            app:met_floatingLabelTextSize="12sp"
            app:met_underlineColor="@color/ghostwhite"
            app:met_iconLeft="@drawable/ic_password_input"
            android:layout_height="wrap_content">
    </com.rengwuxian.materialedittext.MaterialEditText>

    <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/time_picker_btn"
            app:met_floatingLabelTextColor="@color/ghostwhite"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:met_baseColor="@color/white"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="出生日期"
            android:hint="点击选择出生日期"
            android:focusable="false"
            app:met_floatingLabelTextSize="12sp"
            app:met_underlineColor="@color/ghostwhite"
            app:met_iconLeft="@drawable/ic_cake"
            android:layout_height="wrap_content">
    </com.rengwuxian.materialedittext.MaterialEditText>
    <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/gender_picker_btn"
            app:met_floatingLabelTextColor="@color/ghostwhite"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:met_baseColor="@color/white"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="性别"
            android:hint="点击选择性别"
            android:focusable="false"
            app:met_floatingLabelTextSize="12sp"
            app:met_underlineColor="@color/ghostwhite"
            app:met_iconLeft="@drawable/ic_gender"
            android:layout_height="wrap_content">
    </com.rengwuxian.materialedittext.MaterialEditText>

    <com.skydoves.elasticviews.ElasticButton
            android:id="@+id/sign_up_rg"
            android:layout_width="300dp"
            android:layout_gravity="center"
            app:button_cornerRadius="20sp"
            android:layout_marginTop="40dp"
            android:background="@color/teal_200"
            android:text="注        册"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_height="50dp">

    </com.skydoves.elasticviews.ElasticButton>
    <com.airbnb.lottie.LottieAnimationView

            android:id="@+id/rg_success_aim"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            app:lottie_rawRes="@raw/success2"
            app:lottie_autoPlay="false"
            android:layout_height="100dp">
    </com.airbnb.lottie.LottieAnimationView>
</LinearLayout>

</RelativeLayout>